@model IEnumerable<VentadeTaquillas.ViewModels.ViewModelTaquilla>

@{
    ViewData["Title"] = "Factura";
}

<div id="contenido" class="card">
     <div class="card-body">
<div class="row">
    <div class="col-8">
        <div class="text-center">
            <h1>ServiSoft</h1>
            <p>Los Mejores en servicio de Software.</p>
            <p>Contactanos.</p>
            <p>809-816-2616 - ServiSoft_RD@gmail.com</p>
        </div>
    </div>
<div class="col">
<div>

    <img src="~/Logo/Logo_enmarcadoo.png" style="margin-bottom:10px;" width="150px" class="rounded-circle"/>
</div>
</div>


    </div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre del Cliente
            </th>
            <th>
                Pelicula
            </th>
            <th>
                Cine
            </th>
            <th>
                Sala
            </th>
            <th>
                Asiento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClienteNombre) @Html.DisplayFor(modelItem => item.ClienteApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeliculaNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CineNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AsientoNombre)
                </td>
            </tr>
        }


    </tbody>
</table>
         </div>
    </div>
<br />
<div style="float:right">
    
    <a href="#" id="print" class="btn btn-primary">Impimir</a>
</div>

@section scripts{ 

<script>

    $("#print").click(function () {
        var elemento = document.getElementById('contenido');

        html2pdf().from(elemento).set({

            filename: 'Taquilla.pdf',
            margin: [30, 10, 5, 10],
            pagebreak: { avoid: 'tr' },
            jsPDF: { orientation: 'landscape', unit: 'pt', format: 'letter', compressPDF: true }

        }).save()

    });



</script>



}