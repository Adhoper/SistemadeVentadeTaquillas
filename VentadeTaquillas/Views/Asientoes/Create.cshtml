@model VentadeTaquillas.Data.Asiento

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Asientos</h1>

<hr /><br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Identificacion del Asiento</label>
                <input asp-for="NumeroAsiento" class="form-control" required />
                <span asp-validation-for="NumeroAsiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" required>
                    <option value="Disponible">Disponible</option>
                    <option value="Ocupado">Ocupado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Escoje la Sala</label>
                <select asp-for="SalaId" asp-items="@(new SelectList(ViewBag.Salas,"SalaId","Nombre"))" class="form-control" required>
                    <option value="">Selecciona una Sala</option>
                </select>
                <span asp-validation-for="SalaId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a class="btn btn-dark" asp-controller="Publicacions" asp-action="Index">Volver al Inicio</a>
</div>

