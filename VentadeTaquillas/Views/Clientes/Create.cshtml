@model VentadeTaquillas.Data.Cliente

@{
    ViewData["Title"] = "Create";

}


<br />
<h2 class="text-center">Por favor Ingrese sus datos para crear su taquilla</h2>
<hr />
<h4 class="text-center">Datos Personales</h4>
<hr />
<div class="card">
    <div class="card-header text-white  bg-dark"></div>
    <div class="card-body">
        <form asp-action="Create">

            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" required/>
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-7">
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" class="form-control" required />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Ciudad" class="control-label"></label>
                        <input asp-for="Ciudad" class="form-control" required />
                        <span asp-validation-for="Ciudad" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" required />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div>

            </div>
            <div class="form-group" style="float:right">
                <input type="submit" name="button" value="Guardar Datos" class="btn btn-primary" />

            </div>


        </form>

        <div>
            <a asp-controller="Publicacions" class="btn btn-dark" asp-action="Index">Volver al Inicio</a>
        </div>
    </div>
</div>
