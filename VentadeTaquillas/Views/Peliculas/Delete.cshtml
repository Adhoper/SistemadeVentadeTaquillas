@model VentadeTaquillas.Data.Pelicula

@{
    ViewData["Title"] = "Delete";
}

<h1>Confirmacion de eliminacion</h1><br />

<h3>Realmente desea eliminar esta pelicula?</h3><br />
<div>
    <h4>La Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de la Pelicula
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombrePeli)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagenPeli != null)
            {

                var base64 = Convert.ToBase64String(Model.ImagenPeli);
                var img = string.Format("data:image/jpg;base64,{0}", base64);

                <img class="img-thumbnail" src="@img" alt="" width="200px" />

            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            Valor en Taquilla
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            Fecha de Estreno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaPeli)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PeliculaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="MantenimientoPelis">Volver Atras</a>
    </form>
</div>
