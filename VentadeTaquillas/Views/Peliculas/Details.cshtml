@model VentadeTaquillas.Data.Pelicula

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Detalles de la Pelicula</h1><br />

<div class="row">
    <div class="col-3">
        <div>


            @if (Model.ImagenPeli != null)
            {

                var base64 = Convert.ToBase64String(Model.ImagenPeli);
                var img = string.Format("data:image/jpg;base64,{0}", base64);

                <img class="img-thumbnail" width="250px" src="@img" alt="" />



            }


        </div>
    </div>

    <div class="col">
        <a style="float:right" class="btn btn-primary" asp-controller="Clientes" asp-action="Create" asp-route-id="@Model.PeliculaId">Trailer</a>
        <div>
            <h4>@Html.DisplayFor(model => model.NombrePeli)</h4>

        </div>
        <div>

        </div>
        <hr />

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <dt>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Valor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Valor)
                    </dd>
                    <dt class="col-sm-2">
                        Fecha de Lanzamiento
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaPeli)
                    </dd>
                </div>
            </div>
        </div>

    </div>
    </div><br />

<div>
   
    <a style="float:right" class="btn btn-primary" asp-controller="Clientes" asp-action="Create" asp-route-id="@Model.PeliculaId">Comprar Taquilla</a>
     
</div>          
<div style="float:left"><a asp-controller="Home" class="btn btn-dark" asp-action="Index">Volver al Inicio</a></div>


