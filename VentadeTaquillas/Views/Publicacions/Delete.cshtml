@model VentadeTaquillas.Data.Publicacion

@{
    ViewData["Title"] = "Delete";
}


<h2>Esta seguro que desea eliminar esta Publicacion?</h2>
<hr><br />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de la Publicacion (Pelicula):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePubliPeli)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evento):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evento)
        </dd>
        <dt class = "col-sm-2">
            Imagen de la Publicacion (Pelicula):
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagenPubliPeli != null)
            {

                var base64 = Convert.ToBase64String(Model.ImagenPubliPeli);
                var img = string.Format("data:image/jpg;base64,{0}", base64);

                <img class="img-thumbnail" src="@img" alt="" width="200px" />

            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Estreno:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPeli)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PublicacionId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Volver al Inicio</a>
    </form>
</div>
