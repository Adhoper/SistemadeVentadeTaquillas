@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container text-center card bg-primary" style="width: 39rem;">
<div class="card-body">
<h1>Inicie Sesion</h1>
<div class="row" style="display:flex; align-items:center; justify-content: center;">
    <div class="col-md-4">
        <section>
            
            <form id="account" method="post">
                <h4>Administrador.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label >Usuario</label>
                    <input asp-for="Input.NombreUsuario" class="form-control" />
                    <span asp-validation-for="Input.NombreUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label >Constraseña</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark text-white">Iniciar Sesion</button>
                </div>
                <div class="form-group">

                </div>
            </form>
        </section>
    </div>

  </div>
 </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
